<% include template.ejs %>

<div class="container">

  <div class="col-sm-6 col-sm-offset-3">

      <h1>Signup</h1>

      <!-- show any messages that come back with authentication -->
      <% if (message.length > 0) { %>
          <div class="alert alert-danger"><%= message %></div>
      <% } %>

      <!-- LOGIN FORM -->
      <form action="/signup" method="post" data-toggle="validator">
          <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email" data-error="It should be an email address, bro!" /required>
              <div class="help-block with-errors"></div>
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password" /required>
          </div>

          <button type="submit" class="btn btn-warning">Signup</button>
      </form>

      <hr>

      <p>Already have an account? <a href="/login">Login</a></p>
      <p>Or go <a href="/">home</a>.</p>

  </div>

</div>

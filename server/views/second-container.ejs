<div id="second-container" class="container-fluid" >
    <div class="row">

        <div class="panel-group col-xs-12">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                          <a data-toggle="collapse" href="#collapse2">Table</a>
                        </h4>
                    </div>
                    <div id="collapse2" class="panel-collapse collapse in">
                      <div class="panel-body">

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-3 table-buttons">
                                <div class="input-group">
                                    <select class="form-control" id="category-selector">
                                        <option>All entries</option>
                                        <option>Home</option>
                                        <option>Market</option>
                                        <option>Electronics</option>
                                        <option>Gifts</option>
                                        <option>Cafe</option>
                                    </select>
                                    <span class="input-group-btn">
                                        <a id="category-reset-button" href="#" class="btn btn-warning">X</a>
                                    </span>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-2 table-buttons">
                                <a id="show-all-button" href="#" class="btn btn-primary">SHOW</a>
                                <a id="post-entry-button" href="#" class="btn btn-success">POST</a>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-7 form-group table-buttons">
                                <div class="input-group">
                                    <input id="inputId" type="text" class="form-control" placeholder="Input entry ID to show or delete it">
                                    <span class="input-group-btn">
                                        <button id="show-id-button" class="btn btn-primary" type="button">SHOW ID</button>
                                        <button id="delete-id-button" class="btn btn-danger" type="button">DELETE</button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <div class="table-responsive">
                                  <table class="table table-striped table-hover ">
                                  <thead>
                                    <tr>
                                      <th>Entry ID</th>
                                      <th>User ID</th>
                                      <th>Sum</th>
                                      <th>Category</th>
                                      <th>Date</th>
                                      <th>Comment</th>
                                    </tr>
                                  </thead>
                                  <tbody id="main-table">
                                  </tbody>
                                </table>
                                </div>
                            </div>

                      </div>

                      <!-- <div class="panel-footer">Panel Footer</div> -->
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
